<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tags | <%= site.title %></title>
  <meta name="description" content="Tags on <%= site.title %>">
  <link rel="stylesheet" href="<%= site.baseUrl %>styles.css">
  <style>
    :root {
      --bg-color: #ffffff;
      --text-color: #333333;
      --link-color: #0066cc;
      --accent-color: #5c9ce6;
      --border-color: #dddddd;
      --code-bg: #f5f5f5;
    }
    
    @media (prefers-color-scheme: dark) {
      :root {
        --bg-color: #1a1a1a;
        --text-color: #f0f0f0;
        --link-color: #6ab0ff;
        --accent-color: #4d8cc5;
        --border-color: #444444;
        --code-bg: #2d2d2d;
      }
    }
    
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      line-height: 1.6;
      color: var(--text-color);
      background-color: var(--bg-color);
      max-width: 800px;
      margin: 0 auto;
      padding: 1rem;
    }
    
    a {
      color: var(--link-color);
      text-decoration: none;
    }
    
    a:hover {
      text-decoration: underline;
    }
    
    header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    h1, h2, h3, h4, h5, h6 {
      margin-top: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .tags-cloud {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin: 2rem 0;
    }
    
    .tag-item {
      background-color: var(--accent-color);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      font-size: 1rem;
      text-decoration: none;
      display: flex;
      align-items: center;
      transition: transform 0.2s;
    }
    
    .tag-item:hover {
      transform: scale(1.05);
      text-decoration: none;
    }
    
    .tag-count {
      background-color: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      padding: 0.1rem 0.5rem;
      margin-left: 0.5rem;
      font-size: 0.8rem;
    }
    
    footer {
      margin-top: 3rem;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
      text-align: center;
      font-size: 0.9rem;
      color: #666;
    }
    
    @media (max-width: 600px) {
      body {
        padding: 0.5rem;
      }
      
      .tags-cloud {
        gap: 0.5rem;
      }
      
      .tag-item {
        padding: 0.3rem 0.6rem;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1><a href="<%= site.baseUrl %>"><%= site.title %></a></h1>
    <nav>
      <a href="<%= site.baseUrl %>">Home</a> |
      <a href="<%= site.baseUrl %>tags">Tags</a>
    </nav>
  </header>
  
  <main>
    <h2>All Tags</h2>
    
    <% if (tags && tags.length > 0) { %>
      <div class="tags-cloud">
        <% tags.sort((a, b) => b.count - a.count).forEach(function(tag) { %>
          <a href="<%= site.baseUrl %>tags/<%= tag.name %>.html" class="tag-item">
            <%= tag.name %>
            <span class="tag-count"><%= tag.count %></span>
          </a>
        <% }); %>
      </div>
    <% } else { %>
      <p>No tags found.</p>
    <% } %>
  </main>
  
  <footer>
    <p>Created with simple-static - A simple static site generator</p>
    <p>&copy; <%= new Date().getFullYear() %> <%= site.title %></p>
  </footer>
</body>
</html>
